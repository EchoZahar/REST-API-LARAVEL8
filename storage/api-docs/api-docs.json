                    "dateEnd": {
                        "title": "Фильтр по дате",
                        "description": "Фильтрация по дате, ДО введеной даты:",
                        "type": "string",
                        "format": "date",
                        "example": "2021-12-02"
                    }
                },
                "type": "object"
            },
            "QuestionRequest": {
                "title": "Получение данных.",
                "description": "Получить входящие данные из request метода.",
